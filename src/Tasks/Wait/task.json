{
    "id": "5A775A50-3372-1290-9CE0-1579C1E597FB",
    "name": "Wait",
    "friendlyName": "Wait",
    "description": "Suspends the workflow for the specified amount of time",
    "helpMarkDown": "[More Information](https://github.com/deadlydog/VSTS.Wait)",
    "category": "Utility",
    "visibility": [
        "Build",
        "Release"
    ],
    "author": "Daniel Schroeder",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 0
    },
    "instanceNameFormat": "Wait for $(Value) $(Unit)",
    "inputs": [
        {
            "name": "Value",
            "type": "string",
            "label": "Value",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The number of milliseconds/seconds/minutes to suspend the workflow for. Must be an integer greater than zero."
        },
        {
            "name": "Unit",
            "type": "pickList",
            "label": "Unit",
            "defaultValue": "Seconds",
            "required": true,
            "helpMarkDown": "The units (milliseconds, seconds, or minutes) the Value corresponds to.",
            "options": {
                "Milliseconds": "Milliseconds",
                "Seconds": "Seconds",
                "Minutes": "Minutes"
            }
        }
    ],
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)/Code/Wait.ps1",
            "workingDirectory": "$(currentDirectory)"
        }
    }
}